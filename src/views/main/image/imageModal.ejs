<% allConversationWithMess.forEach(Conversation => { %>
    <div class="modal fade" id="imagesModal_<%= Conversation._id %>" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Những hình ảnh trong cuộc trò chuyện.</h4>
                </div>
                <div class="modal-body">
                    <div class="all-images" style="visibility: hidden;">
                        <% Conversation.message.forEach(function(mess){ %>
                            <% if(mess.messageType === "file"){%>
                                <img src="data: <%=mess.file.contentType%>; base64, <%= bufferToBase64(mess.file.data)%>"/>
                            <% } %>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% }); %>
