<div class="col-sm-3 sidenav no-padding">
    <div class="left">
        <div class="top form-group">
            <select class="form-control" id="select-type-chat">
                <option data-target="#all-chat" value="all-chat">Toàn bộ trò chuyện</option>
                <option data-target="#user-chat" value="user-chat">Trò chuyện cá nhân</option>
                <option data-target="#group-chat" value="group-chat">Trò chuyện nhóm</option>
            </select>
            <a href="#groupChatModal" class="create-group-chat" data-toggle="modal" 
                title="Tạo một nhóm trò chuyện mới"></a>
        </div>
        <div class="tab-content">
            <div class="tab-pane active" id="all-chat">
                <ul class="people no-padding-start">
                    <% allConversation.forEach((Conversation)=>{%>
                        <% if(Conversation.members){ %>
                            <a href="#uid_<%=Conversation._id %>" class="room-chat">
                                <li class="person group-chat" data-chat="<%= Conversation._id %>">
                                    <div class="left-avatar">
                                        <img src="images/users/group-avatar-nvb.png" alt="">
                                    </div>
                                    <span class="name">
                                        <span class="group-chat-name">Group:</span> <%= Conversation.name %>
                                    </span>
                                    <span class="time">Hai giờ trước(Chưa xử lý)</span>
                                    <span class="preview">Chào cả nhóm(Chưa xử lý)</span>
                                </li>
                            </a>
                        <% }else{ %>
                            <a href="#uid_<%=Conversation._id %>" class="room-chat">
                                <li class="person" data-chat="<%=Conversation._id %>">
                                    <div class="left-avatar">
                                        <div class="dot"></div>
                                        <img src="images/users/<%=Conversation.avatar %>" alt="">
                                    </div>
                                    <span class="name">
                                        <%= Conversation.username %>
                                    </span>
                                    <span class="time">Một phút trước(Chưa xử lý)</span>
                                    <span class="preview">Xin chào(Chưa xử lý)</span>
                                </li>
                            </a>
                        <% } %>
                    <%}); %>
                </ul>
                <div class="read-more-all-chat">
                    <a href="javascript:void(0)" id="read-more-all-chat">
                        <strong>Xem thêm ...</strong>
                    </a>
                    <div class="read-more-all-chat-loader"><div></div><div></div></div>
                </div>
                <hr>
            </div>

            <div class="tab-pane" id="user-chat">
                <ul class="people no-padding-start">
                    <% userConversation.forEach((Conversation) =>{%>
                        <a href="#uid_<%=Conversation._id %>" class="room-chat">
                            <li class="person" data-chat="contact._id">
                                <div class="left-avatar">
                                    <div class="dot"></div>
                                    <img src="images/users/<%=Conversation.avatar %>" alt="">
                                </div>
                                <span class="name">
                                    <%= Conversation.username %>
                                </span>
                                <span class="time">Một phút trước(Chưa xử lý)</span>
                                <span class="preview">Xin chào(Chưa xử lý)</span>
                            </li>
                        </a>
                    <% }); %>
                </ul>
                <div class="read-more-user-chat">
                    <a href="javascript:void(0)" id="link-read-user-chat">
                        <strong>Xem thêm ...</strong>
                    </a>
                    <div class="read-more-user-chat-loader"><div></div><div></div></div>
                </div>
                <hr>
             </div>

            <div class="tab-pane" id="group-chat">
                <ul class="people no-padding-start">
                    <% grConversation.forEach((Conversation) =>{%>
                        <a href="#uid_<%=Conversation._id %>" class="room-chat">
                            <li class="person group-chat" data-chat="<%=Conversation._id %>">
                                <div class="left-avatar">
                                    <img src="images/users/group-avatar-nvb.png" alt="">
                                </div>
                                <span class="name">
                                    <span class="group-chat-name">Group:</span> <%=Conversation.name %>
                                </span>
                                <span class="time">Hai giờ trước(Chưa xử lý)</span>
                                <span class="preview">Chào cả nhóm(Chưa xử lý)</span>
                            </li>
                        </a>
                    <% }); %>
                </ul>
                <div class="read-more-group-chat">
                    <a href="javascript:void(0)" id="link-read-group-chat">
                        <strong>Xem thêm ...</strong>
                    </a>
                    <div class="read-more-group-chat-loader"><div></div><div></div></div>
                </div>
                <hr>
            </div>
        </div>
    </div>
</div>