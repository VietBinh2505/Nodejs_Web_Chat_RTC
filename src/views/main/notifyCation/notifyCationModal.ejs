<div class="modal fade" id="notificationModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Tất cả thông báo!</h4>
            </div>
            <div class="modal-body">
                <div class="mark-notifi-as-read">
                    <a href="javascript:void(0)" id="modal-up-mark-as-read">
                       <strong>Đánh dấu tất cả đã đọc!</strong>
                    </a>                    
                </div>
                <hr>
                <ul class="list-notifyCations">
                   <% notifications.forEach((notification)=>{ %>
                        <li><%-notification%><li>
                    <% });%>
                </ul>
                <hr>
                <div class="read-move-notify">
                    <a href="javascript:void(0)" id="link-read-more-notify">
                       <strong>Xem Thêm <%= LimitNT %> thông báo!</strong>
                    </a> 
                    <div class="read-more-notify-loader"><div></div><div></div></div>
                </div>
                <hr>
                </div>
            </div>
        </div>
    </div>
</div>